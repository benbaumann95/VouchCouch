<%= simple_form_for(@voucher) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :price %>
    <%= f.input :end_date %>
    <%= f.input :quantity_left %>
  </div>

  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

