<div class="container voucher-form">
  <div class="row">
    <%= form_for @voucher do |f| %>

    <div class="col-sm-6 col-sm-offset-3 col-md-6 col-sm-offset-4">


      <div class="row">

        <div class="col-xs-4">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="col-xs-4">
          <label>Category</label>
          <div class="form-group">
            <!--[key, value]-->
            <%= f.select :category, [["Books"], ["House"], ["Music"], ["Fashion"], ["Travel"], ["Restaurants"], ["Pubs & Bars"], ["Technology"], ["Games"], ["Movies"]], id: 'category', prompt: 'Select...', class: 'form-control' %>
          </div>
        </div>

        <div class="col-xs-4">
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: 'form-control' %>
          </div>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control', id: 'form-description'%>
      </div>

      <%= f.submit "Create", class: "btn btn-primary" %>
    </div>

    <% end %>

  </div>
</div>






