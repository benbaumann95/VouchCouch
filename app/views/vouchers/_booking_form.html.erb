<%= simple_form_for([voucher, booking]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% quantity_array = (1..voucher.quantity_left).to_a %>
    <p><%= f.input :quantity, collection: quantity_array %></p>
    <p><%= f.button :submit, "Add to Basket", { class: "btn btn-primary" } %></p>
  </div>
<% end %>
